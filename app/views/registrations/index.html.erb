<div class="row">
<h1>Register</h1>
	<div class="col-md-4">
		<h3> Lender </h3>
		<%= form_for(@lender) do |f| %>
			<% if @lender.errors.any? %>
			  <div id="error_explanation">
			    <div class="alert alert-danger">
			      The form contains <%= pluralize(@lender.errors.count, "error") %>.
			    </div>
			    <ul>
			    <% @lender.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>

			<% end  %>

				<%= hidden_field(:user, :lender, value:true) %>
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: 'form-control' %>

				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: 'form-control' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>

				<%= f.label :password_confirmation, "Password Confirmation" %>
				<%= f.password_field :password_confirmation, class: 'form-control' %>

				<%= f.label :money %>
				<%= f.select( :money, (25 .. 5000).step(25).to_a, {}, {class: 'form-control select'}) %>

				<%= f.submit "Register", class: "btn btn-primary"  %>
			<% end %>
		</div>

		<div class="col-md-4 col-md-offset-2">
			<h3> Borrower </h3>
			<%= form_for(@borrower) do |f| %>
			<% if @borrower.errors.any? %>
			  <div id="error_explanation">
			    <div class="alert alert-danger">
			      The form contains <%= pluralize(@borrower.errors.count, "error") %>.
			    </div>
			    <ul>
			    <% @borrower.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>

			<% end  %>
				<%= hidden_field(:user, :lender, value:false) %>
				<%= hidden_field(:user, :amount_raised, value:0) %>
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: 'form-control' %>

				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: 'form-control' %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.label :request, "Need Money For" %>
				<%= f.text_field :request, class: 'form-control' %>

				<%= f.label :description %>
				<%= f.text_area :description, class: 'form-control' %>

				<%= f.label :money, "Amount Needed" %>
				<%= f.select( :money, (25 .. 5000).step(25).to_a, {}, {class: 'form-control select'}) %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>

				<%= f.label :password_confirmation, "Password Confirmation" %>
				<%= f.password_field :password_confirmation, class: 'form-control' %>

				<%= f.submit "Register", class: "btn btn-primary"  %>
			<% end %>
		</div>
</div>
	